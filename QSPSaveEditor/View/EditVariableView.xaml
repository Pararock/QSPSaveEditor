<Controls:MetroWindow  x:Class="QSPSaveEditor.View.EditVariableView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QSPSaveEditor.View"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
        mc:Ignorable="d"
        DataContext="{Binding Path=VariablesList.VariablesView.CurrentItem, Source={StaticResource Locator}}"
        Title="EditVariableView" Height="300" Width="300">
    <Grid>
        <avalonEdit:TextEditor
                Name="textEditor"
                FontFamily="Consolas"
                FontSize="10pt"
                SyntaxHighlighting="QSP">
        </avalonEdit:TextEditor>
    </Grid>
</Controls:MetroWindow>
